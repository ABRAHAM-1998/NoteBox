<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activities.MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Note~Box"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email_bx"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:forceDarkAllowed="true"
        android:background="@drawable/edittext_bg"
        android:focusable="true"

        android:hint="Enter name or email"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="12sp"
        tools:layout_below="@id/textView4" />

    <EditText
        android:id="@+id/pass_bx"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/email_bx"
        android:layout_alignEnd="@+id/email_bx"
        android:layout_alignRight="@+id/email_bx"
        android:layout_alignParentStart="true"
        android:forceDarkAllowed="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textSize="12sp" />


    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass_bx"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:text="login"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_login_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/logo_login_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/textview"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:forceDarkAllowed="false"

        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:layout_below="@id/login_btn"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:forceDarkAllowed="true"
        android:text="DON'T HAVE AN ACCOUNT?SIGN UP!"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/finger_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@id/textView2"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_baseline_fingerprint_24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/dev_id"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        android:layout_centerInParent="true"
        android:fontFamily="casual"
        android:text="TWENTYTWO~Note~Box"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dev_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Developer:: seven__z_e_r_0__nine"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>