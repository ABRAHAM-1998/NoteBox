<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><layer-list>
        <item android:bottom="10dp" android:top="-10dp" android:left="-10dp" android:right="-10dp"><shape>
            <gradient android:angle="270" android:endColor="#8E24AA" android:startColor="#A0F3062B" />

            <stroke android:width="9dp" android:color="#B207DF" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    </layer-list></item>
    <item android:state_enabled="true"><layer-list>
        <item android:bottom="10dp" android:left="-10dp" android:top="-10dp" android:right="-10dp">
            <shape android:shape="rectangle"
                android:thickness="0dp">
                <gradient android:angle="270" android:endColor="#D7C4DC" android:startColor="#A073595D" />
                <stroke
                    android:width="9dp"
                    android:color="#000000" />
                <corners android:radius="15dp" />
                <solid android:color="#817A7A" />
            </shape>
        </item>
    </layer-list></item>

</selector>