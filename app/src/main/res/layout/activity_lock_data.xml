<?xml version = "1.0" encoding = "utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".Activities.DashBoard.MainActivity">

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Note~Box"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_bx2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:focusable="true"
            android:forceDarkAllowed="true"

            android:hint="Enter your email"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="@color/white"
            android:textSize="12sp"
            tools:layout_below="@id/textView4" />

        <EditText
            android:id="@+id/pass_bx2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/email_bx2"
            android:layout_alignEnd="@+id/email_bx2"
            android:layout_alignRight="@+id/email_bx2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:forceDarkAllowed="true"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textSize="12sp" />


        <Button
            android:id="@+id/login_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pass_bx2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:text="login"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_login_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/logo_login_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/textview"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:forceDarkAllowed="false"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/log_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pass_bx2"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FB0202"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fingerp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/login_btn2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_baseline_fingerprint_24" />


    </RelativeLayout>
</ScrollView>