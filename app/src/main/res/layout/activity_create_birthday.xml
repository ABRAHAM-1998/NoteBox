<?xml version = "1.0" encoding = "utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.BdaysActivity.CreateBirthdayActivity">

        <TextView
            android:id="@+id/cb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="CREATE BIRTHDAY EVENT"
            android:textSize="26dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="98dp" />

        <DatePicker
            android:id="@+id/cb_calenderView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:datePickerMode="calendar"
            android:headerBackground="#877A6D" />

        <TextView
            android:id="@+id/cb_date_displaytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_calenderView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="selected date"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cb_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_date_displaytext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Enter persons name"
            android:inputType="textPersonName"
            android:text="" />

        <Switch
            android:id="@+id/cb_remiderSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="REMIND BIRTHDAY"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Button
            android:layout_below="@id/cb_remiderSwitch"
            android:id="@+id/cb_create_button"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Create"
            android:textAllCaps="true" />
    </RelativeLayout>
</ScrollView>