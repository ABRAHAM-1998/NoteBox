<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BdaysActivity.CreateBirthdayActivity">

  <TextView
      android:id="@+id/cb_1"
      android:layout_width="wrap_content"
      android:textSize="26dp"
      android:layout_marginTop="25dp"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:layout_height="wrap_content"
      android:text="CREATE BIRTHDAY EVENT"
      tools:layout_editor_absoluteX="242dp"
      tools:layout_editor_absoluteY="98dp" />

  <DatePicker
      android:id="@+id/cb_calenderView"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:layout_below="@id/cb_1"
      android:datePickerMode="calendar"
      android:headerBackground="#877A6D"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  <TextView
      android:layout_marginTop="20dp"
      android:id="@+id/cb_date_displaytext"
      android:layout_width="wrap_content"
      android:layout_below="@id/cb_calenderView"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:text="selected date" />

  <EditText
      android:id="@+id/cb_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:layout_marginTop="10dp"
      android:layout_below="@id/cb_date_displaytext"
      android:inputType="textPersonName"
      android:layout_centerHorizontal="true"
      android:hint="Enter persons name"
      android:text="" />

  <Switch
      android:layout_marginTop="10dp"
      android:id="@+id/cb_remiderSwitch"
      android:layout_below="@id/cb_name"
      android:layout_centerHorizontal="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="REMIND BIRTHDAY"
      tools:ignore="UseSwitchCompatOrMaterialXml" />

  <Button
      android:id="@+id/cb_create_button"
      android:layout_marginBottom="20dp"
      android:textAllCaps="true"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Create" />
</RelativeLayout>