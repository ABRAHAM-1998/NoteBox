<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Notes.Create_Notes">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/ImagePrewiew"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/ImagePrewiew"
        android:text="chose"
        android:id="@+id/chooseBtn"/>


    <EditText
        android:id="@+id/desctextCert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_below="@id/chooseBtn"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />
    <Button
        android:id="@+id/uploadBtn"
        android:layout_width="wrap_content"
        android:hint="Enter Descreption"
        android:layout_height="wrap_content"
        android:layout_below="@id/desctextCert"
        android:layout_centerHorizontal="true"
        android:text="upload"/>
</RelativeLayout>