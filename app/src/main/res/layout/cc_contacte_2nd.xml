<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/contacts" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user"
        android:layout_alignStart="@+id/et_name"
        android:layout_alignLeft="@+id/et_name"
        android:layout_marginTop="22dp"
        android:text="Name"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:inputType="phone"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_alignStart="@+id/et_name"
        android:layout_alignLeft="@+id/et_name"
        android:layout_marginTop="22dp"
        android:text="Mobile"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/et_cc_email"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_cc_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_mobile"
        android:layout_alignStart="@+id/et_name"
        android:layout_alignLeft="@+id/et_name"
        android:layout_marginTop="22dp"
        android:text="Email"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/et_address"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/cc_address"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/cc_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_cc_email"
        android:layout_alignStart="@+id/et_name"
        android:layout_alignLeft="@+id/et_name"
        android:layout_marginTop="22dp"
        android:text="Address"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_creatContacts"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:forceDarkAllowed="true"
        android:background="@color/headings"
        android:text="CREATE"
        android:textColor="#ffffff"
        android:textSize="20sp" />


</RelativeLayout>