<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activities.LOCKER.LockerLoginPage">

    <ImageView
        android:forceDarkAllowed="true"
        android:id="@+id/lk_logo"
        android:layout_width="90dp"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="90dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="80dp" />

    <ImageView
        android:id="@+id/Lk_img"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lk_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/locker" />

    <TextView
        android:id="@+id/lk_head"
        android:textSize="26dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="#FF0000"
        android:layout_below="@id/Lk_img"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCKER" />

    <TextView
        android:id="@+id/pass_text_head"
        android:layout_below="@id/lk_head"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE NEW PASSCODE" />

    <EditText
        android:id="@+id/crt_pass1"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_below="@id/pass_text_head"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ENTER UNIQUE PASSWD"
        android:inputType="numberPassword" />

    <EditText
        android:id="@+id/crt_pass2"
        android:layout_width="wrap_content"
        android:layout_below="@id/crt_pass1"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="RE-ENTER PASSCODE"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button"
        android:background="#FF0000"
        android:layout_margin="30dp"
        android:layout_below="@id/crt_pass2"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER" />
</RelativeLayout>