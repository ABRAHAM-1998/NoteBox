<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:alpha="0.7"
    android:backgroundTint="#685A6C"
    android:forceDarkAllowed="false"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bday_grad"
        android:forceDarkAllowed="false">


        <TextView
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:forceDarkAllowed="false"
            android:text="NAME ::"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bday_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/b1"
            android:fontFamily="sans-serif-black"
            android:forceDarkAllowed="false"
            android:text="djflkdfj"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/b1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:forceDarkAllowed="false"
            android:text="D-O-B ::"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bday_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bday_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/b2"
            android:fontFamily="sans-serif-condensed-light"
            android:forceDarkAllowed="false"
            android:text="09-07-1998"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bday_switch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/bday_name"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@id/ct_edit"
            android:forceDarkAllowed="false"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm"
            app:tint="#FA0702" />

        <ImageView
            android:id="@+id/ct_delete"
            android:layout_width="22dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:forceHasOverlappingRendering="true"
            app:srcCompat="@drawable/delete_icon" />

        <ImageView
            android:id="@+id/ct_edit"
            android:layout_width="22dp"
            android:layout_height="32dp"
            android:layout_below="@+id/ct_delete"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/edit_icon"
            tools:ignore="UnknownIdInLayout" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>