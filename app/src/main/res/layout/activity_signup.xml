<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activities.SignupActivity">


    <TextView
        android:id="@+id/sign_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-black"
        android:text="CREATE ACCOUNT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/sgn_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/sign_head"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bg"
        android:focusable="true"
        android:forceDarkAllowed="false"
        android:hint="Name"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="12sp"
        tools:layout_below="@id/sign_head" />

    <EditText
        android:id="@+id/sgn_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/sgn_name"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bg"
        android:focusable="true"
        android:forceDarkAllowed="false"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="12sp"
        tools:layout_below="@id/sgn_name" />

    <EditText
        android:id="@+id/sgn_phone"
        android:layout_width="match_parent"
        android:layout_below="@id/sgn_email"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:layout_height="60dp"
        android:textSize="12sp"
        android:hint="Mobile"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="@color/white"
        android:forceDarkAllowed="false"
        android:inputType="phone" />
    <EditText
        android:id="@+id/inputt_pass1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/sgn_phone"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white"
        android:forceDarkAllowed="false"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/inputt_pass2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/inputt_pass1"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Re-Enter Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white"
        android:forceDarkAllowed="false"
        android:textSize="12sp" />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_below="@id/inputt_pass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <RadioButton
            android:id="@+id/male_btn"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Male" />
        <RadioButton
            android:id="@+id/female_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="12dp"
            />
    </RadioGroup>


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/radioGroup"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="I accept the Terms of Service" />

    <Button
        android:id="@+id/registerButon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/purple_200"
        android:text="REGISTER"
        android:textSize="18sp"
        android:textStyle="bold" />



</RelativeLayout>
